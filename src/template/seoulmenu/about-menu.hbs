{{#each this~}}
    <li about-id="{{id}}">{{aboutMenu~}}
        {{~#if aboutMenuSub~}}
            <ul class="about-menu-sub">
                {{~#each aboutMenuSub~}}
                    <li about-id="{{id}}">{{aboutMenuSub~}}
                        {{~#if aboutMenuSubSub~}}
                            <ul class="about-menu-sub-sub">
                                {{~#each aboutMenuSubSub~}}
                                    <li about-id="{{id}}">{{aboutMenuSubSub}}</li>
                                {{~/each~}}
                            </ul>
                        {{~/if~}}
                    </li>
                {{~/each~}}
            </ul>
        {{~/if~}}
    </li>
{{~/each}}